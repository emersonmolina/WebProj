@model Pessoa

@{
    ViewData["Title"] = "Cadastro de usuários";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Pessoas" asp-action="Create" method="post" class="form-horizontal" role="form">
    <h4>Preencha todos os campos do formulário</h4>
    <hr />
    @*<div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>*@
    <div class="form-group">
        <label asp-for="PESS_NM_NOME" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PESS_NM_NOME" class="form-control" />
            <span asp-validation-for="PESS_NM_NOME" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PESS_NM_EMAIL" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PESS_NM_EMAIL" class="form-control" />
            <span asp-validation-for="PESS_NM_EMAIL" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PESS_DT_DATA_NASCIMENTO" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PESS_DT_DATA_NASCIMENTO" class="form-control" type="date" />
            <span asp-validation-for="PESS_DT_DATA_NASCIMENTO" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PESS_TX_SENHA" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PESS_TX_SENHA" class="form-control" />
            <span asp-validation-for="PESS_TX_SENHA" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="RepetirSenha" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RepetirSenha" class="form-control" />
            <span asp-validation-for="RepetirSenha" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Salvar</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
