@model WebApp1.ViewModels.Grupo.NovoGrupoViewModel

@{
    ViewData["Title"] = "NovoGrupo";
}

<h2>Novo Grupo</h2>

<form asp-controller="Grupos" asp-action="NovoGrupo" method="post" class="form-horizontal" role="form">

    <div class="form-horizontal">
        <h4>Preencha as informações do novo grupo.</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tipo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Tipo" class="form-control">
                    <option>Selecione um item.</option>
                    <option value="1">Café</option>
                    <option value="2">Bolão</option>
                    <option value="3">Aniversário</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger" />
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Salvar</button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
